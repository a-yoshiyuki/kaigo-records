<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-md-offset-1">
      <h3><%= @customer.full_name %>様　過去の食事摂取量記録</h3>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-offset-1">
      <h3>検索結果</h3>
    </div>
    <div class="col-sm-4"></div>
    <div class="col-sm-4"></div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <div class="scroll">
        <thead>
          <tr>
            <th>日付</th>
            <th>朝食</th>
            <th>昼食</th>
            <th>夕食</th>
            <th>水分量</th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |meal_records| %>
            <tr>
              <td><%= meal_records.created_at.strftime('%Y年%m月%d日') %></td>
              <td><%= meal_records.breakfast_main_amount %>／<%= meal_records.breakfast_side_amount %></td>
              <td><%= meal_records.lunch_main_amount %>／<%= meal_records.lunch_side_amount %></td>
              <td><%= meal_records.dinner_main_amount %>／<%= meal_records.dinner_side_amount %></td>
              <td><%= meal_records.water_amount %>ｍｌ</td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </table>
  </div>
</div>