<div class="container-fluid">
　<div class="row">
    <div class="col-sm-1 col-md-2"></div>
    <div class="col-sm-10 col-md-8">
      <h2><%= @customer.full_name %>様 バイタル記録　入力</h2>
    </div>
    <div class="col-sm-1 col-md-2"></div>
  </div>

  <%= form_with model: @vital_record, url: staff_member_new_vital_record_path, method: :post, local: true, class: "form-horizontal" do |vital_record| %>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">計測時間</label>
    <div class="col-sm-4">
      <%= vital_record.time_select :time, class: 'form-control' %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">体温</label>
    <div class="col-sm-4">
      <%= vital_record.text_field :body_temperature, size: 5 %>
      ℃
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">血圧</label>
    <div class="col-sm-4">
      <%= vital_record.text_field :blood_pressure_high, size: 5 %>
      ／
      <%= vital_record.text_field :blood_pressure_low, size: 5 %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">心拍数</label>
    <div class="col-sm-4">
      <%= vital_record.text_field :heart_rate, size: 5 %>
      回/分
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">SPO₂</label>
    <div class="col-sm-4">
      <%= vital_record.text_field :oxygen, size: 5 %>
      ％
    </div>
    <div class="col-sm-3"></div>
  </div>

    <%#= vital_record.hidden_field :staff_members_id, value: @vital_record.staff_members_id %>
  <div class="form-group">
    <div class="col-sm-5"></div>
    <div class="col-sm-2">
      <%= vital_record.submit "バイタル入力", class:"btn btn-primary" %>
    </div>
    <div class="col-sm-5"></div>
  </div>
  <% end %>
</div>