<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-offset-1">
      <h3><%= @customer.full_name %>様　過去のバイタル記録</h3>
    </div>
    <div class="col-sm-4"></div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-offset-1">
      <h3>検索結果</h3>
    </div>
    <div class="col-sm-4"></div>
    <div class="col-sm-4"></div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <div class="scroll">
        <thead>
          <tr>
            <th>計測時間</th>
            <th>体温</th>
            <th>血圧</th>
            <th>心拍数</th>
            <th>SPO₂</th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |vital_records| %>
            <tr>
              <td><%= vital_records.created_at.strftime('%Y年%m月%d日') %></td>
              <td><%= vital_records.body_temperature %></td>
              <td><%= vital_records.blood_pressure_high %>／<%= vital_records.blood_pressure_low %></td>
              <td><%= vital_records.heart_rate %>回/分</td>
              <td><%= vital_records.oxygen %>％</td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </table>
  </div>
</div>