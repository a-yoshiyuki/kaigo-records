<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1 col-md-4"></div>
    <div class="col-sm-10 col-md-4">
      <h2><%= @customer.full_name %>様<br>経過記録　入力</h2>
    </div>
    <div class="col-sm-1 col-md-4"></div>
  </div>

<%= form_with model: @progress_record, url: staff_member_new_staff_member_progress_record_path, method: :post, local: true, class: "form-horizontal" do |progress_record| %>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">時間</label>
    <div class="col-sm-4">
      <%= progress_record.time_select :time, class: 'form-control' %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">内容</label>
    <div class="col-sm-4">
      <%= progress_record.text_area :detail, class: 'form-control' %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-3"></div>
    <label class="col-sm-2 control-label">記録者</label>
    <div class="col-sm-4">
      <%= progress_record.collection_select :staff_member_id, StaffMember.all, :id, :full_name %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-5"></div>
    <div class="col-sm-2">
      <%= progress_record.submit "経過記録入力", class:"btn btn-primary" %>
    </div>
    <div class="col-sm-5"></div>
  </div>

<% end %>