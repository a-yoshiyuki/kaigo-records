<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-offset-1">
      <h3><%= @customer.full_name %>様　過去の経過記録</h3>
    </div>
    <div class="col-sm-4"></div>
    <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-offset-1">
      <h3>検索結果</h3>
    </div>
    <div class="col-sm-4"></div>
    <div class="col-sm-4"></div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <div class="scroll">
        <thead>
          <tr>
            <th>記録日時</th>
            <th>内容</th>
            <th>記録者</th>
          </tr>
        </thead>
        <tbody>
          <% @results.each do |progress_records| %>
            <tr>
              <td><%= progress_records.created_at.strftime('%Y年%m月%d日') %></td>
              <td><%= progress_records.detail %></td>
              <td><%= progress_records.staff_member.full_name %></td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </table>
  </div>
</div>