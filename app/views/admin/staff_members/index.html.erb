<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-2">
      <h2>スタッフ一覧</h2>
    </div>
    <div class="col-sm-6">
      <%= link_to "スタッフアカウント作成", new_staff_member_registration_path, class: "btn btn-3" %>
    </div>
    <div class="col-sm-1"></div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <div class="list">
        <ul>
          <% @staff_members.each do |staff_member| %>
          <li>
            <%= link_to admin_staff_member_path(staff_member) do %>
              <%= staff_member.full_name %>
            <% end %>
          <% end %>
          </li>
        </ul>
        <%= paginate @staff_members %>
      </div>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>