<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-4 col-sm-offset-2">
      <h2>スタッフ情報　編集</h2>
    </div>
    <div class="col-sm-4"></div>
  </div>

    <%= form_with model: @staff_member, url: admin_staff_member_path, local: true, class: "form-horizontal" do |staff_member| %>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label class="col-sm-3 control-label">氏名</label>
        <div class="col-sm-3">
          <%= staff_member.text_field :first_name, :placeholder =>"姓" %>
        </div>
        <div class="col-sm-3">
          <%= staff_member.text_field :last_name, :placeholder =>"名" %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label class="col-sm-3 control-label">フリガナ</label>
        <div class="col-sm-3">
          <%= staff_member.text_field :first_name_kana, :placeholder =>"セイ" %>
        </div>
        <div class="col-sm-3">
          <%= staff_member.text_field :last_name_kana, :placeholder =>"メイ" %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label class="col-sm-3 control-label">郵便番号</label>
        <div class="col-sm-3">
          <%= staff_member.text_field :postal_code %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label class="col-sm-3 control-label">住所</label>
        <div class="col-sm-3">
          <%= staff_member.text_field :address %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label class="col-sm-3 control-label">メールアドレス</label>
        <div class="col-sm-3">
          <%= staff_member.text_field :email %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <label class="col-sm-3 control-label">電話番号</label>
        <div class="col-sm-3">
          <%= staff_member.text_field :telephone_number %>
        </div>
        <div class="col-sm-2"></div>
      </div>
      <div class="form-group">
        <div class="col-sm-3 col-sm-offset-7">
          <%= staff_member.submit "変更", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
</div>