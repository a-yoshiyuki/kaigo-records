<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-2">
      <h2>利用者情報　詳細</h2>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-4">
      <%= link_to "情報編集", edit_admin_customer_path(@customer), data: {"turbolinks" => false}, class: "btn btn-3" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-5">
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <th>
                氏名
              </th>
              <th>
                <%= @customer.full_name %>
              </th>
            </tr>
            <tr>
              <th>
                フリガナ
              </th>
              <th>
                <%= @customer.full_name_kana %>
              </th>
            </tr>
            <tr>
              <th>
                在籍ステータス
              </th>
              <th>
                <%= @customer.is_deleted %>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <%= link_to "過去の経過記録", staff_member_path(@customer), class: "btn btn-4 btn-lg" %>
      <%= link_to "過去のバイタル記録", staff_member_index_staff_member_vital_record_path(@customer), class: "btn btn-4 btn-lg" %>
      <%= link_to "過去の食事量・水分量記録", staff_member_index_staff_member_meal_record_path(@customer), class: "btn btn-4 btn-lg" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>