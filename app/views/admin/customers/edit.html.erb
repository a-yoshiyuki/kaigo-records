<div class="container-fluid">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-10">
      <h2>利用者情報　編集</h2>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path, local: true do |customer| %>
      <tr>
        <th>
          氏名
        </th>
        <th>
          <%= customer.text_field :first_name %>
          <%= customer.text_field :last_name %>
        </th>
      </tr>
      <tr>
        <th>
        フリガナ
        </th>
        <th>
          <%= customer.text_field :first_name_kana %>
          <%= customer.text_field :last_name_kana %>
        </th>
      </tr>
      <tr>
        <th>
          在籍ステータス
        </th>
      　<th>
      　   <% Customer.is_deleteds.each do |is_deleted| %>
        　   <div class="form-check">
        　     <%= customer.radio_button :is_deleted, is_deleted[0], class: "form-check-input" %>
        　     <%= customer.label is_deleted[0], class: "form-check-label" %>
        　   </div>
          <% end %>
      　</th>
      </tr>
      <%= customer.submit "保存", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>