<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-2">
      <h2>過去の利用者検索</h2>
    </div>
    <div class="col-sm-6">
      <div class="search">
        <%= search_form_for @q, url: search_admin_customers_path do |search| %>
          <%= search.label :name_cont, '利用者氏名' %>
          <%= search.search_field :first_name %>
          <%= search.search_field :last_name %>
          <%= search.search_field :first_name_kana %>
          <%= search.search_field :last_name_kana %>
          <br>
          <%= search.submit '検索' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <div class="list">
        <ul>
          <% @customers.each do |customer| %>
          <li>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.full_name %>
            <% end %>
          <% end %>
          </li>
        </ul>
          <%= paginate @customers %>
      </div>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>