<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-4 col-sm-offset-2">
      <h2>新規利用者　入力</h2>
    </div>
    <div class="col-sm-4"></div>
  </div>

      <%= form_with model: @customer, url: admin_customers_path, local: true, class: "form-horizontal" do |customer| %>
          <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-3 control-label">氏名</label>
            <div class="col-sm-3">
              <%= customer.text_field :first_name, :placeholder =>"姓" %>
            </div>
            <div class="col-sm-3">
              <%= customer.text_field :last_name, :placeholder =>"名" %>
            </div>
            <div class="col-sm-2"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-3 control-label">フリガナ</label>
            <div class="col-sm-3">
              <%= customer.text_field :first_name_kana, :placeholder =>"セイ" %>
            </div>
            <div class="col-sm-3">
              <%= customer.text_field :last_name_kana, :placeholder =>"メイ" %>
            </div>
            <div class="col-sm-2"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-1"></div>
            <label class="col-sm-3 control-label">在籍ステータス</label>
              <% Customer.is_deleteds.each do |is_deleted| %>
                <div class="col-sm-1">
                  <div class="form-check">
                    <%= customer.radio_button :is_deleted, is_deleted[0], class: "form-check-input" %>
                    <%= customer.label is_deleted[0], class: "form-check-label" %>
                  </div>
                </div>
              <% end %>
              <div class="col-sm-7"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-3 col-sm-offset-3">
              <%= customer.submit "新規登録", class:"btn btn-primary btn-lg" %>
            </div>
          </div>
      <% end %>
</div>