<div class="container-fluid">
  <div class="devise-title">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <h2>スタッフアカウント　新規作成</h2>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "staff_members/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :氏名 %><br />
          <%= f.text_field :first_name, autofocus: true, :placeholder =>"姓" %>
          <%= f.text_field :last_name, autofocus: true, :placeholder =>"名" %>
        </div>

        <div class="field">
          <%= f.label :フリガナ %><br />
          <%= f.text_field :first_name_kana, autofocus: true, :placeholder =>"セイ" %>
          <%= f.text_field :last_name_kana, autofocus: true, :placeholder =>"メイ" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %><br />
          <%= f.text_field :postal_code, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %><br />
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class:"btn btn-success col-sm-8" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
